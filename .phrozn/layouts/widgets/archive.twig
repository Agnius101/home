<div class="events">
{% for key, event in entry.events if key > 0 %}
    <div class="event">
        <div class="event-header row">
            <h4 class="col-sm-8">{{ event.name }}</h4>
            <div class="date col-sm-4">{{ event.date }}</div>
        </div>
        <div class="event-links row">
            <a class="btn btn-xs btn-info" target="_blank" href="{{ event.facebook }}">Facebook</a>
            {% if event.speakers %}
                <a class="btn btn-xs btn-info" target="_blank" href="https://github.com/vilniusphp/vilniusphp-meetups/tree/master/{{ event.date|date("Y-m-d") }}">GitHub</a>
            {% endif %}
            {% if event.place %}
                {{ event.place.name }} {{ event.place.address }} <a href="{{ event.place.mapurl }}"><i class="mdi-maps-map"></i></a>
            {% endif %}
        </div>
        {% if event.masterTopic %}
            <div class="master-topic well">
                {{ event.masterTopic }}
            </div>
        {% endif %}
        <div class="row">
            {% for speaker in event.speakers %}
                <div class="well">
                    <h5>{{ speaker.title }}</h5>
                    <div>
                        <i class="mdi-social-person"></i>{{ speaker.name }}
                        {% if speaker.linkedin %}
                            <a class="shadow-z-1" href="{{ speaker.linkedin }}"><img src="media/img/linkedin.png" alt="Linkedin: {{ speaker.name }}"/></a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
            {% if event.ligtingTalks %}
                {% include 'layouts/widgets/lighting-talks.twig' %}
            {% endif %}
        </div>
        {% if event.sponsor %}
            <div class="sponsors panel panel-default">
                <div class="panel-heading">Susitikimą rėmė</div>
                <div class="panel-body">
                    {% for item in event.sponsor %}
                        <a href="{{ item.url }}" title="{{ item.title }}"><img src="media/img/{{ item.logo }}" alt="{{ item.title }}" /></a>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
{% endfor %}
</div>
